{
  "name": "auxly-server",
  "version": "0.1.0",
  "main": "index.js",
  "author": "jorge valdez @delvaze",
  "license": "MIT",
  "scripts": {
    "pretty": "prettier-eslint --write \"./src/**/*.js\" \"index.js\"",
    "dev": "webpack --config ./config/webpack.config.dev.js --watch --hot",
    "build:dev": "webpack --config ./config/webpack.config.dev.js",
    "build:prod": "webpack --config ./config/webpack.config.prod.js",
    "start": "yarn build:prod && node ./dist/build.js"
  },
  "lint-staged": {
    "index.js": [
      "yarn pretty",
      "git add"
    ],
    "src/**/*.js": [
      "yarn pretty",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "spotify-web-api-node": "^3.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-airbnb": "^2.4.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "nodemon-webpack-plugin": "^4.0.3",
    "prettier-eslint-cli": "^4.7.1",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
